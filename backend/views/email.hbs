<mjml>
  <mj-body background-color="#ffffff">
    <mj-section background-color="#ffffff" padding-bottom="0px" padding-top="0">
      <mj-column vertical-align="top" width="100%">
        <mj-image
          src="{{backendUrl}}/images/inflation.jpg"
          align="center"
          border="none"
          width="600px"
          padding-left="0px"
          padding-right="0px"
          padding-bottom="0px"
          padding-top="0"
        ></mj-image>
      </mj-column>
    </mj-section>
    <mj-wrapper border="1px solid #efeb65">
      <mj-section padding-bottom="0px" padding-top="0">
        <mj-column vertical-align="top" width="100%">
          <mj-text
            align="left"
            font-size="30px"
            font-weight="bold"
            font-family="open Sans Helvetica, Arial, sans-serif"
            padding-left="25px"
            padding-right="25px"
            padding-bottom="15px"
            padding-top="25px"
          >
            <mj-raw>{{welcomeMessage}}</mj-raw>
          </mj-text>
        </mj-column>
      </mj-section>
      <mj-section padding-bottom="20px" padding-top="20px">
        <mj-column vertical-align="middle" width="100%">
          <mj-text
            align="left"
            font-size="24px"
            font-family="open Sans Helvetica, Arial, sans-serif"
            padding-left="25px"
            padding-right="25px"
          >
            <mj-raw>Kedves {{nickname}},</mj-raw>
          </mj-text>
          <mj-text
            align="left"
            font-size="16px"
            font-family="open Sans Helvetica, Arial, sans-serif"
            padding-left="25px"
            padding-right="25px"
          >
            Regisztrációd megerősítéséhez kattints az alábbi gombra:
          </mj-text>
          <mj-button
            href="{{frontendUrl}}/registration/verify?token={{token}}"
            align="left"
            font-size="22px"
            background-color="#efeb65"
            border-radius="10px"
            color="#201610"
            font-family="open Sans Helvetica, Arial, sans-serif"
            padding-bottom="25px"
          >
            Megerősítés
          </mj-button>
          <mj-text
            align="left"
            font-size="12px"
            font-family="open Sans Helvetica, Arial, sans-serif"
            padding-left="25px"
            padding-right="25px"
          >
            Az infláció kalkulátor csapatod
          </mj-text>
        </mj-column>
      </mj-section>
   </mj-wrapper>
  </mj-body>
</mjml>